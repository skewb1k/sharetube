{
  "openapi": "3.1.1",
  "paths": {
    "/healthz": {
      "get": {
        "summary": "Health check",
        "responses": {
          "200": {
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/room": {
      "post": {
        "summary": "Create room",
        "responses": {
          "201": {
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string",
                  "description": "Room ID",
                  "example": "abcd1234"
                }
              }
            }
          }
        }
      }
    },
    "/room/{roomId}": {
      "parameters": [
        {
          "name": "roomId",
          "in": "path",
          "required": true,
          "type": "string"
        }
      ],
      "get": {
        "summary": "Get room by ID",
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Room"
                }
              }
            }
          },
          "404": {
            "description": "Room not found"
          }
        }
      },
      "post": {
        "summary": "Join room",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string"
                  }
                },
                "required": ["username"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string",
                  "description": "Auth Token"
                }
              }
            }
          },
          "404": {
            "description": "Room not found"
          }
        }
      }
    },
    "/video": {
      "post": {
        "summary": "Add video",
        "responses": {
          "200": {
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string",
                  "description": "Room ID",
                  "example": "abcd1234"
                }
              }
            }
          }
        }
      }
    },
  },
  "components": {
    "securitySchemes": {
      "AuthToken": {
        "type": "apiKey",
        "in": "header",
        "name": "Authorization"
      }
    },
    "schemas": {
      "Video": {
        "type": "object",
        "properties": {
          "ytId": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "authorName": {
            "type": "string"
          },
          "thumbnailUrl": {
            "type": "string",
            "format": "uri"
          }
        },
        "required": ["ytId", "title", "authorName", "thumbnailUrl"]
      },
      "Playlist": {
        "type": "object",
        "properties": {
          "videos": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Video"
            }
          },
          "previousVideo": {
            "oneOf": [
              { "$ref": "#/components/schemas/Video" },
              { "type": "null" }
            ]
          },
          "currentVideo": {
            "oneOf": [
              { "$ref": "#/components/schemas/Video" },
              { "type": "null" }
            ]
          }
        },
        "required": ["videos"]
      },
      "User": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          }
        }
      },
      "Room": {
        "type": "object",
        "properties": {
          "users": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/User" }
          },
          "playlist": {
            "$ref": "#/components/schemas/Playlist"
          }
        },
        "required": ["users","playlist"]
      }
    }
  }
}
